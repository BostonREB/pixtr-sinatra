<h2>Edit Image</h2>

<img src="<%= @image.url %>">

<form action="/galleries/<%= @image.gallery_id %>/images/<%= @image.id %>" method="POST">
  <input type="hidden" name="_method" value="PATCH"> <!-- allows browers to execute patch request -->
 
  <div>
    <label for="image_name">Name</label> 
    <input type="text" id="image_name" name= "image[name]" value="<%= @image.name %>"><br>

    <label for="image_description">Image Description</label>
    <input type="text" id="image_description" name= "image[description]" value="<%= @image.description %>"><br>

    <label for="image_url">Image URL</label>
    <input type"text" id="image_url" name="image[url]" value="<%= @image.url %>"><br>

  </div>
  <div>
    <input type="submit" value="Update Image">
  <div>
</form>
