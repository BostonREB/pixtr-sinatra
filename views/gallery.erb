<h1><%= @gallery.name.capitalize %></h1>
<a href="/galleries/<%= @gallery.id %>/edit">Edit gallery name</a><br><br> <!-- links can only make get requests -->
<a href="/galleries/<%= @gallery.id %>/images/new">Add new image to the gallery</a><br><br>

<form action="/galleries/<%= @gallery.id %>" method="POST">
  <input type="hidden" name="_method" value= "DELETE">
  <input type="submit" value= "Delete Gallery">
</form>


<% @images.each do |image| %> 
  <p><%= image.name %>: <%= image.description %></p>
  <img src='<%= image.url %>'><br> 
  <a href="/galleries/<%= @gallery.id %>/images/<%= image.id %>/edit">Edit Image</a> 

  <form action="/galleries/<%= @gallery.id %>/images/<%= image.id %>" method="POST">
    <input type="hidden" name="_method" value= "DELETE">
    <input type="submit" value= "Delete Image">
  </form>

<% end %>
